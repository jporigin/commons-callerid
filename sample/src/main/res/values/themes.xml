<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Caller_ID" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/call_theme_primary</item>
        <item name="colorOnPrimary">@color/call_theme_onPrimary</item>
        <item name="colorSurface">@color/call_theme_surfaceContainerLowest</item>
        <item name="colorOnSurface">@color/call_theme_onSurface</item>
    </style>

    <!-- Custom Dialog -->
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="fontFamily">@font/ci_font_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/call_theme_onSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>