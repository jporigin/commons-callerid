<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.Caller_ID" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/ci_app_color</item>
    </style>


    <style name="CiTheme.Light" parent="Theme.Material3.Light.NoActionBar">

        <item name="ciAppColor">@color/ci_app_color</item>
        <item name="ciTxtAppColor">@color/ci_txt_app_color</item>

        <item name="ciScreenBg">@color/ci_screen_bg</item>
        <item name="ciTxtColor">@color/ci_txt_color</item>

        <item name="ciRippleColor">@color/ci_ripple_color</item>
        <item name="ciGrey">@color/ci_grey</item>
        <item name="ciLightGrey">@color/ci_light_grey</item>


        <!-- bnr -->
        <item name="bAdsShimmerColor">@color/n_shimmer_color</item>

        <item name="bAdsBackground">@color/n_bg_color</item>
        <item name="bAdsTextColor">@color/n_text_color</item>

        <item name="bAdsAttributionBg">@drawable/ads_native_attribution_bg</item>
        <item name="bAdsAttributionTvColor">@color/n_attribution_text_color</item>

        <item name="bAdsCallActionBg">@drawable/banner_call_action_bg</item>
        <item name="bAdsCallActionFg">@drawable/ads_call_action_ripple</item>
        <item name="bAdsCallActionTvColor">@color/n_call_action_tv_color</item>

        <!-- ntv -->
        <item name="nAdsShimmerColor">@color/n_shimmer_color</item>

        <item name="nAdsBackground">@color/n_bg_color</item>
        <item name="nAdsTextColor">@color/n_text_color</item>

        <item name="nAdsAttributionBg">@drawable/ads_native_attribution_bg</item>
        <item name="nAdsAttributionTvColor">@color/n_attribution_text_color</item>

        <item name="nAdsCallActionBg">@drawable/native_call_action_bg</item>
        <item name="nAdsCallActionFg">@drawable/ads_call_action_ripple</item>
        <item name="nAdsCallActionTvColor">@color/n_call_action_tv_color</item>
    </style>

    <!-- Custom Dialog -->
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

</resources>