<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light Theme -->
    <style name="Caller.Main.Theme.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/call_theme_primary_light</item>
        <item name="colorOnPrimary">@color/call_theme_onPrimary_light</item>
        <item name="colorSurface">@color/call_theme_surfaceContainerLowest_light</item>
        <item name="colorOnSurface">@color/call_theme_onSurface_light</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/call_theme_surfaceContainerLowest_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/call_theme_surfaceContainerLowest_light</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Primary Colors -->
        <item name="callThemePrimary">@color/call_theme_primary_light</item>
        <item name="callThemeOnPrimary">@color/call_theme_onPrimary_light</item>

        <!-- Surface Colors -->
        <item name="callThemeSurfaceContainerLowest">@color/call_theme_surfaceContainerLowest_light</item>
        <item name="callThemeSurfaceContainerLow">@color/call_theme_surfaceContainerLow_light</item>
        <item name="callThemeSurfaceContainerHighest">@color/call_theme_surfaceContainerHighest_light</item>
        <item name="callThemeOnSurface">@color/call_theme_onSurface_light</item>
        <item name="callThemeOnSurfaceVariant">@color/call_theme_onSurfaceVariant_light</item>

        <!-- Outline Color -->
        <item name="callThemeOutline">@color/call_theme_outline_light</item>
        <item name="callThemeOutlineVariant">@color/call_theme_outlineVariant_light</item>

        <!-- Ads Color -->
        <item name="callThemeAdsBgColor">@color/call_theme_adsBgColor_light</item>
        <item name="callThemeAdsBgColorHigh">@color/call_theme_adsBgColorHigh_light</item>
        <item name="callThemeAdsTextColor">@color/call_theme_adsTextColor_light</item>
        <item name="callThemeAdsTextColorVariant">@color/call_theme_adsTextColorVariant_light</item>
        <item name="callThemeAdsPrimary">@color/call_theme_adsPrimary_light</item>
        <item name="callThemeAdsOnPrimary">@color/call_theme_adsOnPrimary_light</item>
    </style>

    <!-- Dark Theme -->
    <style name="Caller.Main.Theme.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/call_theme_primary_dark</item>
        <item name="colorOnPrimary">@color/call_theme_onPrimary_dark</item>
        <item name="colorSurface">@color/call_theme_surfaceContainerLowest_dark</item>
        <item name="colorOnSurface">@color/call_theme_onSurface_dark</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/call_theme_surfaceContainerLowest_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/call_theme_surfaceContainerLowest_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Primary Colors -->
        <item name="callThemePrimary">@color/call_theme_primary_dark</item>
        <item name="callThemeOnPrimary">@color/call_theme_onPrimary_dark</item>

        <!-- Surface Colors -->
        <item name="callThemeSurfaceContainerLowest">@color/call_theme_surfaceContainerLowest_dark</item>
        <item name="callThemeSurfaceContainerLow">@color/call_theme_surfaceContainerLow_dark</item>
        <item name="callThemeSurfaceContainerHighest">@color/call_theme_surfaceContainerHighest_dark</item>
        <item name="callThemeOnSurface">@color/call_theme_onSurface_dark</item>
        <item name="callThemeOnSurfaceVariant">@color/call_theme_onSurfaceVariant_dark</item>

        <!-- Outline Color -->
        <item name="callThemeOutline">@color/call_theme_outline_dark</item>
        <item name="callThemeOutlineVariant">@color/call_theme_outlineVariant_dark</item>

        <!-- Ads Color -->
        <item name="callThemeAdsBgColor">@color/call_theme_adsBgColor_dark</item>
        <item name="callThemeAdsBgColorHigh">@color/call_theme_adsBgColorHigh_dark</item>
        <item name="callThemeAdsTextColor">@color/call_theme_adsTextColor_dark</item>
        <item name="callThemeAdsTextColorVariant">@color/call_theme_adsTextColorVariant_dark</item>
        <item name="callThemeAdsPrimary">@color/call_theme_adsPrimary_dark</item>
        <item name="callThemeAdsOnPrimary">@color/call_theme_adsOnPrimary_dark</item>
    </style>

    <style name="CounterTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/sinteca_regular</item>
        <item name="counterTextColor">?attr/callThemeOnSurfaceVariant</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SettingItemTitleTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">?attr/callThemeOnSurface</item>
        <item name="android:fontFamily">@font/sinteca_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SettingItemDesTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">?attr/callThemeOnSurface</item>
        <item name="android:fontFamily">@font/sinteca_regular</item>
        <item name="android:textSize">12sp</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SettingItemSwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>

        <item name="android:scaleX">0.72</item>
        <item name="android:scaleY">0.72</item>
        <item name="android:clickable">false</item>
        <item name="thumbTint">@color/ci_thumb_tint_switch</item>
    </style>


</resources>