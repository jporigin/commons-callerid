<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Caller.Main.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/call_theme_primary</item>
        <item name="colorOnPrimary">@color/call_theme_onPrimary</item>
        <item name="colorSurface">@color/call_theme_surfaceContainerLowest</item>
        <item name="colorOnSurface">@color/call_theme_onSurface</item>
    </style>


    <style name="CounterTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/sinteca_regular</item>
        <item name="counterTextColor">@color/call_theme_onSurfaceVariant</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SettingItemTitleTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/call_theme_onSurface</item>
        <item name="android:fontFamily">@font/sinteca_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SettingItemDesTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/call_theme_onSurface</item>
        <item name="android:fontFamily">@font/sinteca_regular</item>
        <item name="android:textSize">12sp</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SettingItemSwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>

        <item name="android:scaleX">0.72</item>
        <item name="android:scaleY">0.72</item>
        <item name="android:clickable">false</item>
        <item name="thumbTint">@color/ci_thumb_tint_switch</item>
    </style>


</resources>