<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
