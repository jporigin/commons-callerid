<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMainGoogleAds"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp">

    <FrameLayout
        android:id="@+id/flSpaceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:id="@+id/spMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSpaceAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/space_for_ads"
            android:textColor="@color/ci_txt_color"
            android:textSize="16sp"
            android:visibility="visible" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/flShimmerGoogleAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/flGoogleAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>